{
  "name": "html-to-electron-exe-generator",
  "version": "1.0.0",
  "main": "main.js",
  "description": "把静态html打包成Exe或dmg",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite --config vite.config.js",
    "dev:electron": "wait-on http://localhost:9010 && cross-env NODE_ENV=development electron .",
    "build:renderer": "vite build --config vite.config.js",
    "build": "npm run build:renderer",
    "dist": "npm run build:renderer && electron-builder",
    "dist:win": "npm run build:renderer && electron-builder --win",
    "dist:win:x64": "npm run build:renderer && electron-builder --win --x64",
    "dist:win:x86": "npm run build:renderer && electron-builder --win --ia32",
    "dist:win:arm64": "npm run build:renderer && electron-builder --win --arm64",
    "dist:mac": "npm run build:renderer && electron-builder --mac"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.4",
    "vite": "^6.4.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron-builder": "^24.13.3",
    "electron": "33.0.0",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "tdesign-icons-vue-next": "^0.3.5",
    "tdesign-vue-next": "^1.10.3",
    "vue": "^3.5.24"
  },
  "build": {
    "appId": "com.html2electron.generator",
    "productName": "网站应用生成器",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer-dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "node_modules",
        "to": "vendor/node_modules"
      },
      {
        "from": "../templates/electron-wrapper",
        "to": "templates/electron-wrapper",
        "filter": [
          "**/*",
          "!build-output/**",
          "!dist/**"
        ]
      }
    ],
    "compression": "maximum",
    "mac": {
      "target": "dmg",
      "icon": "templates/electron-wrapper/build/icon.png",
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "icon": "templates/electron-wrapper/build/icon.png",
      "target": [
        {
          "target": "portable"
        }
      ]
    }
  }
}
